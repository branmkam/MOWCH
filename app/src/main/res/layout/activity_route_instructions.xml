<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop"
    android:layout_width="match_parent"
    android:layout_height="481dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="#FFFFFF"
    android:elevation="4dp">

    <TextView
        android:id="@+id/route_name_selected"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/sspbold"
        android:gravity="center"
        android:text="@string/routeNameSelected"
        android:textColor="@color/lightblue"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/miles_selected"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/sspsemibold"
        android:gravity="center"
        android:text="@string/milesSelected"
        android:textColor="@color/main"
        android:textSize="23sp" />


    <TextView
        android:id="@+id/recipients"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/sspsemibold"
        android:gravity="center"
        android:text="Recipients and Addresses"
        android:textColor="@color/main"
        android:textSize="23sp" />

    <Button
        android:id="@+id/close_addressses"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="342dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_outline_close_24"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/notifications"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:dividerHeight="0.9dp"
        android:isScrollContainer="false"
        android:visibility="visible" />


</RelativeLayout>