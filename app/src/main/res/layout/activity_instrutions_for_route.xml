<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rectangle_1"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:gravity="center"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="@color/light_gray"
    android:elevation="4dp">


    <TextView
        android:id="@+id/route_name_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sspbold"
        android:gravity="center"
        android:text="@string/sample_address"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/instructions_for_route"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/sspsemibold"
        android:gravity="center"
        android:text="Instructions for Route"
        android:textColor="@color/lightblue"
        android:textSize="23sp" />

    <Button
        android:id="@+id/close_instructions"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="342dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_outline_close_24"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/instructions_list"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:dividerHeight="0.9dp" />


</RelativeLayout>