<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="366dp"
    android:layout_height="298dp"
    android:background="@drawable/gray_rect2"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_gravity="start"
    tools:context=".PausePop">


    <TextView
        android:id="@+id/describe_why"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sspsemibold"
        android:gravity="center_horizontal"
        android:text="Describe why you were unable to make your delivery."
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/type_here2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:hint="Type here"
        android:inputType="text"
        android:gravity="top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/input_field3" />

    <Button
        android:id="@+id/submit_delivery_status"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:background="@drawable/loginfield"
        android:text="Submit"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/sspsemibold"
        android:textSize="20sp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="230dp"/>



</RelativeLayout>