<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".LogginginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="365dp"
        android:layout_height="207dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="333dp"
        android:background="@drawable/input_field2"
        android:fontFamily="@font/bryantproreg"
        android:hint="@string/prompt_email"
        android:textColorHint="@color/gray"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="402dp"
        android:background="@drawable/input_field2"
        android:ems="10"
        android:fontFamily="@font/bryantproreg"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:textColorHint="@color/gray"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/mail2"
        android:layout_marginTop="345dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="415dp"
        android:src="@drawable/password"/>

    <Button
        android:id="@+id/forgot_password_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="288dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="471dp"
        android:background="@color/main"
        android:text="@string/Forgot_Password"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="18dp" />

    <Button
        android:id="@+id/loginfield"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="515dp"
        android:background="@drawable/loginfield"
        android:text="Log in"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="628dp"
        android:gravity="center_horizontal|top"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signup_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="645dp"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal|top"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="24dp" />

    <Button
        android:id="@+id/brandon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/loginfield"
        android:gravity="center"
        android:text="Brandon's Button"
        android:visibility="visible" />
</RelativeLayout>